@model BookNest.ViewModels.AdminDashboardViewModel

<h2>Admin Dashboard</h2>

@if (TempData["SuccessMessage"] != null)

{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)

{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@{
    ViewData["Title"] = "Admin Dashboard";
}


<div class="card-deck mt-5">
    <div class="card text-center mb-3">
        <div class="card-body">
            <a href="/Admin/ReviewRequests" class="btn btn-primary btn-lg btn-block">Review Book Issue Requests</a>
        </div>
    </div>
    <div class="card text-center mb-3">
        <div class="card-body">
            <a href="/User" class="btn btn-success btn-lg btn-block">User List</a>
        </div>
    </div>
    <div class="card text-center mb-3">
        <div class="card-body">
            <a href="/Admin/UserIssues" class="btn btn-warning btn-lg btn-block">Check Restrictions</a>
        </div>
    </div>
</div>



<div class="container mt-5">
    <h2>View Last 24 Hours Issues</h2>
    <div>
        <a href="@Url.Action("Last24HoursIssues", "BookIssue")" class="btn btn-primary">View Last 24 Hours Issues</a>
    </div>
</div>


<h2>ADD Book</h2>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModifyBooksModal">
    Add/Modify Books
</button>

<!-- The Modal -->
<div class="modal" id="addModifyBooksModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add/Modify Books</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form asp-action="AddBook" method="post" class="mb-4">
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <input type="text" class="form-control" id="Title" name="Title" required />
                    </div>
                    <div class="form-group">
                        <label for="Author">Author</label>
                        <input type="text" class="form-control" id="Author" name="Author" required />
                    </div>
                    <div class="form-group">
                        <label for="Quantity">Quantity</label>
                        <input type="number" class="form-control" id="Quantity" name="Quantity" required min="1" />
                    </div>
                    <button type="submit" class="btn btn-primary">Add Book</button>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>



<div class="card-deck mt-5">
    <div class="card text-center mb-3">
        <div class="card-body">
            <a href="/hangfire" class="btn btn-secondary btn-lg btn-block ">Hangfire Test</a>
        </div>
    </div>


    <div class="card text-center mb-3">
        <div class="card-body">
            <a href="/Book" class="btn btn-primary btn-lg btn-block">Book</a>
        </div>
    </div>
</div>





