@model IEnumerable<BookNest.Models.BookIssueRequest>

<div class="container mt-5">
    <h2>Review Book Issue Requests</h2>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Book Title</th>
                <th>User Name</th>
                <th>Request Date</th>
                <th>Return Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.Book.Title</td>
                    <td>@request.User.UserName</td>
                    <td>@request.RequestDate.ToShortDateString()</td>
                    <td>@request.ReturnDate.ToShortDateString()</td>
                    <td>
                        <form asp-action="ApproveRequest" method="post" style="display:inline;">
                            <input type="hidden" name="requestId" value="@request.Id" />
                            <button type="submit" class="btn btn-primary">Approve</button>
                        </form>
                        <form asp-action="DeclineRequest" method="post" style="display:inline;">
                            <input type="hidden" name="requestId" value="@request.Id" />
                            <button type="submit" class="btn btn-danger">Decline</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
